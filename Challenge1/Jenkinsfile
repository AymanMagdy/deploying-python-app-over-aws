pipeline {
    agent any

    stages {
        stage('Run unit testing') {
            steps {
                echo 'Here will be the unit testing stage..'
            }
        }

        stage('Run the containers..') {
            steps {
                sh "docker-compose -f '${env.DOCKER_COMPOSE_PATH}' up -d"
            }
        }

        stage('Deploy') {
            steps {
                echo 'Here will deploy to AWS.'
            }   
        }
    }
}
